<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordActivity">

    <Button
        android:id="@+id/saveButton"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#F18C42"
        android:fontFamily="@font/inter"
        android:text="Salveaza"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerRepeatPasswordInput" />

    <EditText
        android:id="@+id/repeatNewPasswordInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="77dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Repeta parola noua"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPasswordInput" />

    <EditText
        android:id="@+id/newPasswordInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Parola noua"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/repeatNewPasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldPasswordInput" />

    <EditText
        android:id="@+id/oldPasswordInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/input_shape"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Parola veche"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/newPasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changePasswordTitle" />

    <TextView
        android:id="@+id/changePasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/inter"
        android:text="Schimba parola"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/RegisterUserInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/backToHomeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="156dp"
        android:background="#FFFDFD"
        app:layout_constraintBottom_toTopOf="@+id/oldPasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow" />
</androidx.constraintlayout.widget.ConstraintLayout>