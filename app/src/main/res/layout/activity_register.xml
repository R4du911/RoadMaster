<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDFD"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/registerRepeatPasswordInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="79dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:paddingStart="10dp"
        android:hint="Repeta parola"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/RegisterButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterPasswordInput" />

    <EditText
        android:id="@+id/RegisterUserInput"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="27dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:paddingStart="10dp"
        android:fontFamily="@font/inter"
        android:hint="Utilizator"
        android:inputType="text"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/RegisterEmailInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterTitle" />

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#F18C42"
        android:fontFamily="@font/inter"
        android:text="Creeaza"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/RegisterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginTop="122dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="73dp"
        android:fontFamily="@font/inter"
        android:text="Creeaza un cont"
        android:textColor="#000000"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/RegisterUserInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RegisterPasswordInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="27dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Parola"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:paddingStart="10dp"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/registerRepeatPasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterEmailInput" />

    <EditText
        android:id="@+id/RegisterEmailInput"
        android:layout_width="330sp"
        android:layout_height="48sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="27dp"
        android:paddingStart="10dp"
        android:background="#D9D9D9"
        android:ems="10"
        android:fontFamily="@font/inter"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#8E8A8A"
        android:textSize="18sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/RegisterPasswordInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterUserInput" />

    <ImageButton
        android:id="@+id/BackToLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="345dp"
        android:layout_marginBottom="161dp"
        android:background="#FFFDFD"
        app:layout_constraintBottom_toTopOf="@+id/RegisterUserInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons8_left_50" />

</androidx.constraintlayout.widget.ConstraintLayout>